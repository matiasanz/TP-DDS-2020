{{# partial "titulo" }}
    <title>GESOC - Nueva Compra</title>
{{/partial}}

{{# partial "nav"}}
    <div class="topnav">
        <a href="/">Inicio</a>
        <a class="active" href="/compras/menu">Compras</a>
        <a href="/entidades">Entidades</a>
        <a href="/mensajes">Mensajes</a>
        <a href="/logout">Salir</a>
    </div>
{{/partial}}

{{# partial "contenido" }}
    <section>
        <script type="text/javascript" src="/js/compras-nueva.js"></script>
        <button class="botonAtras" style="width: 16%;" onclick="location.href='/compras'">Volver a lista de compras
        </button>
        <div id="compras" style="text-align: left;">
            <ul>
                <hr size="1px" color="black"/>
                <li>
                    <strong> Fecha: </strong> {{fecha}} <br>
                    <strong> Precio Total: </strong> {{precio}} <br>
                    <strong> Moneda: </strong> {{moneda}} <br>
                    <strong> Medio de Pago: </strong> {{medioDePago}} <br>
                    
                    <br>
                    <strong> Items: </strong>
                    <ul>
                    	<hr style="border-top:1px dotted #000;">
                        {{#items}}
                            <li>
                                <strong> Descripci√≥n: </strong> {{descripcion}} <br>
                                <strong> Cantidad: </strong> {{cantidad}} <br>
                                <strong> Valor Unitario: </strong> {{valorUnitario}}
                            </li>
                            <hr style="border-top:1px dotted #000;">
                        {{/items}}
                    </ul>
                    
                    <br>
                    
                    <strong> Etiquetas: </strong>
                    <ul>
                    	<hr style="border-top:1px dotted #000;">
                        {{#each etiquetas}}
                            <li>
                                <div>
                                    <form action="/compras/{{id}}/eliminar-etiqueta/{{this}}" method="POST">
                                        {{this}}
                                        <input type="submit" value="quitar">
                                    </form>
                                </div>
                            </li>
                            <hr style="border-top:1px dotted #000;">
                        {{/each}}
                    </ul>
                </li>
                <hr size="1px" color="black"/>
            </ul>
        </div>

        <br>

        <div style="margin: auto;width:50%" id="nuevas-etiquetas">
            <form id="frm_etiquetas" action="/compras/{{id}}/etiquetas" method="POST">
                <h2 style="margin: 0 30 10 160"> Agregar Nuevas Etiquetas  </h2>
                <div id="div_compra_etiquetas">
                    <table id="tbl_etiquetas" class="tablaEntidades" style="width:30%;margin: 10px auto auto;">
                        <thead>
                        <tr>
                            <th style="margin: 0 30 10 203;"> Etiquetas  </th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <td>
                                <input name="txt_etiqueta_1" type="text" required>
                            </td>
                        </tr>
                        </tbody>
                    </table>
                    <input id="cantidad_etiquetas" name="cantidad_etiquetas" type="hidden" value="1">
                </div>
            </form>
            <div style="10px auto auto">
                <button id="btn_agregar_etiquetas" onclick="agregarEtiqueta()" style="margin:10 0 20 235";>Agregar</button>
                <button id="btn_eliminar_etiquetas" onclick="eliminarEtiqueta()" style="margin:10 10 10 10";>Eliminar</button>
            </div>
            <input type="submit" value="Finalizar y Guardar" class="botonSameTamanio" form="frm_etiquetas">

        </div>
    </section>
{{/partial}}

{{> layout.html.hbs }}